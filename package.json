{
  "name": "@xkeshav/watch",
  "version": "1.5.4",
  "description": "A debug utility to see data within page or in the console for React",
  "main": "./dist/index.js",
  "repository": {
    "type": "github",
    "url": "https://github.com/xkeshav/watch.git"
  },
  "homepage": "https://www.npmjs.com/package/@xkeshav/watch",
  "publishConfig": {
    "access": "public"
  },
  "sideEffects": false,
  "files": [
    "dist"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    }
  },
  "scripts": {
    "prebuild": "npm run clean",
    "build": "tsc",
    "clean": "rimraf dist",
    "prepublishOnly": "npm run build",
    "version": "npm publish --access=public",
    "test": "vitest run"
  },
  "peerDependencies": {
    "react": ">=18 <20",
    "react-dom": ">=18 <20"
  },
  "keywords": [
    "watch",
    "WatchJson",
    "react",
    "typescript",
    "console",
    "utility",
    "debugger"
  ],
  "author": "Keshav Mohta<xkeshav@gmail.com>",
  "license": "ISC",
  "devDependencies": {
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.2",
    "@types/node": "^25.2.2",
    "@types/react": "^18.x",
    "@types/react-dom": "^18.x",
    "jsdom": "^28.0.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "rimraf": "^5.0.5",
    "typescript": "^5.3.3",
    "vitest": "^4.0.18"
  }
}
